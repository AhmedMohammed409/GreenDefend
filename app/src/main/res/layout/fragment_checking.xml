<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.homing.CheckingFragment">


    <ImageView
        android:id="@+id/img_Camera"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="Take image"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/btn_checking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText"
        android:layout_marginBottom="5dp"
        tools:src="@drawable/background_onboarding2"/>

    <Button
        android:id="@+id/btn_checking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>